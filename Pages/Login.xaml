<Page x:Class="Pegasus_App.Pages.Login"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Pegasus_App.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="720" d:DesignWidth="1280"
      ShowsNavigationUI="False"
      Title="Login">

    <Grid Background="#001423">
        <Rectangle Width="480" Height="490" Fill="#0c2233">

        </Rectangle>
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
            <Label Margin="0,20,0,50" FontWeight="ExtraLight" HorizontalAlignment="Center" FontSize="32" Foreground="#FFFFFF">Sign Up Section</Label>
            <TextBlock Width="400" Margin="300,10,300,5" Foreground="#FFFFFF" FontSize="22" FontWeight="ExtraLight" TextAlignment="Left"> Username or Email:</TextBlock>
            <TextBox Name="UsernameInput" Width="400" Height="30" FontSize="22"></TextBox>
            <TextBlock Width="400" Margin="300,10,300,5" Foreground="#FFFFFF" FontSize="22" FontWeight="ExtraLight"> Password:</TextBlock>
            <TextBox Name="PasswordInput" Width="400" Height="30" FontSize="22"></TextBox>
            <CheckBox Margin="300,10,300,0" FontWeight="ExtraLight" VerticalAlignment="Center" Foreground="#FFFFFF" FontSize="22">Remember me</CheckBox>
            <TextBlock FontWeight="ExtraLight" Margin="300, 0, 300, 10" HorizontalAlignment="Right" Foreground="#FFFFFF" FontSize="22">Forgot the password?</TextBlock>
            <Button FontWeight="ExtraLight" Name="LoginButton" Click="LoginButton_Click" Width="300" Height="50" Margin="300, 0, 300, 10" Content="Login" Background="#1E2832" FontSize="24" Foreground="#FFFFFF"></Button>
        </StackPanel>
    </Grid>
</Page>
